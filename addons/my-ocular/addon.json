{
  "name": "ocular integration",
  "description": "Shows ocular statuses and forum post reactions. Uses my-ocular.jeffalo.net to obtain data.",
  "credits": [
    {
      "name": "Jeffalo"
    }
  ],
  "userscripts": [
    {
      "url": "discuss.js",
      "matches": ["topics"]
    },
    {
      "url": "profile.js",
      "matches": ["profiles"]
    },
    {
      "url": "reactions.js",
      "matches": ["topics"]
    }
  ],
  "userstyles": [
    {
      "url": "discuss.css",
      "matches": ["topics"],
      "if": {
        "settings": { "discuss": true }
      }
    },
    {
      "url": "profile.css",
      "matches": ["profiles"],
      "if": {
        "settings": { "profile": true }
      }
    },
    {
      "url": "reactions.css",
      "matches": ["topics"],
      "if": {
        "settings": { "reactions": true }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "settings": [
    {
      "name": "Show statuses on profiles",
      "id": "profile",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show statuses on forums",
      "id": "discuss",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show reaction buttons and \"View on ocular\" link",
      "id": "reactions",
      "type": "boolean",
      "default": true
    }
  ],
  "versionAdded": "1.4.0",
  "tags": ["forums", "profiles", "community"],
  "enabledByDefault": false
}
