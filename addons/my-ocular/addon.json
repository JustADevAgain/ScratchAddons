{
  "name": "Ocular and Aviate Integration",
  "description": "Shows ocular/aviate statuses and forum post reactions. Uses my-ocular.jeffalo.net to obtain data.",
  "credits": [
    {
      "name": "Jeffalo",
      "note": "Ocular addon",
      "link": "https://github.com/jefalo"
    },
    {
      "name": "MystPi",
      "note": "Aviate addon",
      "link": "https://github.com/MystPi"
    },
    {
      "name": "Norbiros",
      "link": "https://github.com/Norbiros"
    }
  ],
  "userscripts": [
    {
      "url": "discuss.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*", "https://scratch.mit.edu/users/*"],
      "if": {
        "settings": {
          "discuss": true
        }
      }
    },
    {
      "url": "profile.js",
      "matches": ["https://scratch.mit.edu/users/*/"],
      "if": {
        "settings": {
          "profile": true
        }
      }
    },
    {
      "url": "reactions.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "if": {
        "settings": {
          "reactions": true
        }
      }
    }
  ],
  "userstyles": [
    {
      "url": "button-style.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*", "https://scratch.mit.edu/users/*"]
    },
    {
      "url": "reactions.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "if": {
        "settings": {
          "reactions": true
        }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "settings": [
    {
      "name": "Show Custom Statuses",
      "id": "show-status",
      "type": "select",
      "potentialValues": [
        {
          "id": "ocular",
          "name": "Ocular"
        },
        {
          "id": "aviate",
          "name": "Aviate"
        },
        {
          "id": "none",
          "name": "None"
        }
      ],
      "default": "ocular"
    },
    {
      "name": "Show statuses on profiles",
      "id": "profile",
      "type": "boolean",
      "default": true,
      "if": {
        "settings": {
          "show-status": ["ocular", "aviate"]
        }
      }
    },
    {
      "name": "Show statuses on forums",
      "id": "discuss",
      "type": "boolean",
      "default": true,
      "if": {
        "settings": {
          "show-status": ["ocular", "aviate"],
          "signature": true,
          "mode": "forums"
        }
      }
    },
    {
      "name": "Show ocular reaction buttons and \"View on ocular\" link",
      "id": "reactions",
      "type": "boolean",
      "default": true
    }
  ],
  "versionAdded": "1.4.0",
  "tags": ["forums", "profiles", "community"],
  "enabledByDefault": false,
  "latestUpdate": {
    "version": "1.27.0",
    "isMajor": true,
    "temporaryNotice": "Added support for Aviate.",
    "newSettings": ["show-status"]
  }
}
