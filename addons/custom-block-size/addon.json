{
  "name": "Custom block size",
  "description": "Adjust the extra space applied around text on Scratch blocks.",
  "tags": ["editor", "beta"],
  "credits": [
    {
      "name": "SheepTester",
      "link": "https://sheeptester.github.io/hello-world/userscripts/"
    },
    {
      "name": "lisa_wolfgang",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang"
    }
  ],
  "enabledByDefault": false,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "info": [
  {
    "type": "notice",
    "text": "Setting the padding size to a smaller value may decrease usability.",
    "id": "usabilityNotice"
  }
  ],
  "settings": [
    {
      "name": "Padding size (%)",
      "id": "paddingSize",
      "type": "integer",
      "min": 50,
      "default": 100
    }
  ],
  "l10n": true
}
