{
  "name": "Better forum post editor buttons",
  "description": "Changes the icons for buttons in the forum post editor from pixelated bitmaps to Material icons.",
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["editingScreens"]
    }
  ],
  "versionAdded": "1.14.0",
  "tags": ["community", "forums", "theme"],
  "credits": [
    {
      "name": "A-E-",
      "link": "https://github.com/easrng/material-scratch-forum-editor-buttons"
    },
    {
      "name": "Secret-chest",
      "note": "addon version",
      "id": "addonVersion",
      "link": "https://github.com/Secret-chest"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["editingScreens"]
    }
  ],
  "settings": [
    {
      "name": "Icon style",
      "id": "iconStyle",
      "type": "select",
      "potentialValues": [
        {
          "name": "Outlined",
          "id": "outline"
        },
        {
          "name": "Filled",
          "id": "fill"
        }
      ],
      "default": "outline"
    }
  ],
  "enabledByDefault": false,
  "dynamicEnable": true,
  "dynamicDisable": true
}
