{
  "name": "Show full areas",
  "description": "Shows the full signature of users on the forums, and shows full What I've been doing on profiles.",
  "credits": [
    {
      "name": "GrahamSH"
    },
    {
      "name": "NitroCipher/ZenithRogue"
    }
  ],
  "options": [
    {
      "name": "Full Signature Mode",
      "id": "signatureselect",
      "type": "select",
      "potential_values": ["Expand Button in Footer", "Expand Button in Message Body", "Always Show", "Off"],
      "default": "Expand Button in Footer"
    },
    {
      "name": "Show scroll for What I've been doing",
      "id": "whatworkingon",
      "type": "boolean",
      "default": true
    }
  ],
  "userstyles": [
    {
      "url": "expand.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "setting_match": {
        "setting_id": "signatureselect",
        "setting_value": "Expand Button in Footer"
      }
    },
    {
      "url": "always.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "setting_match": {
        "setting_id": "signatureselect",
        "setting_value": "Always Show"
      }
    },
    {
      "url": "working.css",
      "matches": ["https://scratch.mit.edu/users/*"],
      "setting_match": {
        "setting_id": "whatworkingon",
        "setting_value": true
      }
    }
  ],
  "userscripts": [
    {
      "url": "expand.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "setting_match": {
        "setting_id": "signatureselect",
        "setting_value": "Expand Button in Footer"
      }
    },
    {
      "url": "expand_body.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "setting_match": {
        "setting_id": "signatureselect",
        "setting_value": "Expand Button in Message Body"
      }
    }
  ],
  "tags": ["community", "forums"],
  "enabled_by_default": false
}
