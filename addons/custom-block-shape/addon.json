{
  "name": "Custom block shape",
  "description": "Adjust the padding and corner radius of Scratch blocks.",
  "tags": ["editor", "theme", "beta"],
  "credits": [
    {
      "name": "SheepTester",
      "link": "https://sheeptester.github.io/hello-world/userscripts/"
    },
    {
      "name": "lisa_wolfgang",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang"
    }
  ],
  "enabledByDefault": false,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "info": [
    {
      "type": "notice",
      "text": "Setting the padding size to a smaller value may decrease usability.",
      "id": "usabilityNotice"
    }
  ],
  "settings": [
    {
      "name": "Padding size (50-100%)",
      "id": "paddingSize",
      "type": "integer",
      "min": 50,
      "default": 100,
      "max": 100
    },
    {
      "name": "Corner size (0-300%)",
      "id": "cornerSize",
      "type": "integer",
      "min": 0,
      "default": 100,
      "max": 300
    },
    {
      "name": "Notch height (0-150%)",
      "id": "notchSize",
      "type": "integer",
      "min": 0,
      "default": 100,
      "max": 200
    }
  ],
  "l10n": true
}
