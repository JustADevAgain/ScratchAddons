{
  "name": "Customizable stgae monitors",
  "description": "Changes the color and border radius of stage monitors.",
  "credits": [
    {
      "name": "Samq64",
      "link": "https://scratch.mit.edu/users/samq64/"
    },
    {
      "name": "Maximouse",
      "link": "https://scratch.mit.edu/users/Maximouse/"
    }
  ],
  "userstyles": [
    {
      "url": "monitors.css",
      "matches": ["projects"]
    },
    {
      "url": "custom_value_color.css",
      "matches": ["projects"],
      "if": {
        "settings": { "custom_value": true }
      }
    }
  ],
  "customCssVariables": [
    {
      "name": "valueText",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "value"
        }
      }
    },
	{
      "name": "headerText",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "header"
        }
      }
    },
    {
      "name": "bgText",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "bg"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Make all values the same color",
      "id": "custom_value",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Border radius (px)",
      "id": "radius",
      "type": "integer",
      "min": 0,
      "max": 11,
      "default": 4
    },
    {
      "name": "Value border radius (px)",
      "id": "value-radius",
      "type": "integer",
      "min": 0,
      "max": 11,
      "default": 4
    },
    {
      "name": "Background color",
      "id": "bg",
      "type": "color",
      "allowTransparency": true,
      "default": "#e5f0ff"
    },
	{
      "name": "List header color",
      "id": "header",
      "type": "color",
      "allowTransparency": true,
      "default": "#ffffff"
    },
    {
      "name": "Value color",
      "id": "value",
      "type": "color",
      "allowTransparency": true,
      "default": "#ff8c1a",
      "if": {
        "settings": { "custom_value": true }
      }
    }
  ],
  "presets": [
    {
      "name": "Black values",
      "id": "black",
      "description": "Makes the background of monitor values a dark gray.",
      "values": {
        "custom_value": true,
		"bg": "#e5f0ff",
		"header": "#ffffff",
        "value": "#222"
      }
    },
    {
      "name": "Transparent values",
      "id": "transparent",
      "description": "Makes the background of monitor values transparent.",
      "values": {
        "custom_value": true,
		"bg": "#e5f0ff",
		"header": "#ffffff",
        "value": "#ffffff00"
      }
    },
    {
      "name": "Translucent black",
      "id": "translucent",
      "description": "Makes monitors a translucent black like HTMLifier.",
      "values": {
        "custom_value": true,
        "bg": "#00000040",
		"header": "#00000040",
        "value": "#00000040"
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "injectAsStyleElt": true,
  "tags": ["editor", "theme", "projectPlayer"],
  "versionAdded": "1.24.0",
  "enabledByDefault": false
}
