{
  "name": "Quote post number",
  "description": "Click the \"quote post number\" button to include a link to the post in your reply.",
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["topics"],
      "runAtComplete": true
    }
  ],
  "versionAdded": "1.22.0",
  "tags": ["community", "forums"],
  "enabledByDefault": false,
  "dynamicEnable": true,
  "dynamicDisable": true,
  "settings": [
    {
      "name": "Automatically add post link to quotes",
      "id": "auto_add",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Use post number when quoting",
      "id": "auto_add_use_number",
      "type": "boolean",
      "if": {
        "settings": {
          "auto_add": true
        }
      },
      "default": false
    }
  ],
  "credits": [
    {
      "name": "itta611",
      "link": "https://github.com/itta611/"
    }
  ]
}
