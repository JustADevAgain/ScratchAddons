{
  "name": "Customizable fonts",
  "description": "Customize the font family for different parts of Scratch.",
  "tags": ["theme", "beta", "editor"],
  "credits": [
    {
      "name": "ErrorGamer2000",
      "link": "https://scratch.mit.edu/users/ErrorGamer2000/"
    }
  ],
  "info": [
    {
      "type": "notice",
      "id": "bunchwarn",
      "text": "Letters in wider fonts will be bunched together. Try not to use excessively large fonts."
    }
  ],
  "enabledByDefault": false,
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.24.0",
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/*"],
      "runAtComplete": true
    }
  ],
  "settings": [
    {
      "name": "Navigation bar font",
      "id": "navfnt",
      "type": "datalist",
      "default": "Helvetica",
      "items": [
        "Helvetica",
        "Arial",
        "Roboto",
        "Lucida Grande",
        "Verdana",
        "Times New Roman",
        "Sora",
        "DejaVu Sans",
        "Handlee",
        "Antonio",
        "Lato"
      ]
    },
    {
