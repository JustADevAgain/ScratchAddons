{
  "name": "Copy link button",
  "description": "Adds \"Copy Link\" button to comments. Button copies link to comments, which you can use to show someone a comment.",
  "credits": [{
    "name": "Sly-Little-Fox",
    "link": "https://github.com/Sly-Little-Fox/"
  }],
  "userscripts": [{
      "url": "profile.js",
      "matches": ["https://scratch.mit.edu/users/*", "https://scratch.mit.edu/studios/*"],
      "runAtComplete": false
    },
    {
      "url": "project.js",
      "matches": ["https://scratch.mit.edu/projects/*"],
      "runAtComplete": false
    }
  ],
  "info": [{
    "type": "notice",
    "text": "Preferred button place will be ignored if it is not possible to place it button there.",
    "id": "notice"
  }],
  "settings": [{
    "id": "preferred",
    "name": "Preferred place for button",
    "type": "select",
    "default": "report",
    "potentialValues": [{
        "id": "reply",
        "name": "Nearby Reply button"
      },
      {
        "id": "report",
        "name": "Nearby Report button"
      }
    ]
  }],
  "tags": ["community", "beta"],
  "enabledByDefault": false
}