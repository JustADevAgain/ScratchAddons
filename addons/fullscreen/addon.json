{
  "name": "Enhanced fullscreen",
  "description": "Adds several fixes and customization options to the project player's fullscreen mode.",
  "credits": [
    {
      "name": "lisa_wolfgang",
      "link": "https://github.com/lisa-wolfgang"
    }
  ],
  "info": [
    {
      "type": "notice",
      "text": "If you hide the toolbar, you'll need to use the Esc key on your keyboard to exit fullscreen mode.",
      "id": "hideToolbarNotice"
    }
  ],
  "settings": [
    {
      "name": "Synchronize browser's and Scratch's fullscreen modes",
      "id": "browserFullscreen",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Only toggle browser fullscreen in editor with stage button",
      "id": "editorFullscreen",
      "type": "boolean",
      "default": true,
      "if": {
        "settings": { "browserFullscreen": true }
      }
    },
    {
      "name": "Darken background",
      "id": "darkenBg",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Hide toolbar",
      "id": "hideToolbar",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "userstyles": [
    {
      "url": "hideOverflow.css",
      "matches": ["projects"]
    },
    {
      "url": "removeBorder.css",
      "matches": ["projects"]
    },
    {
      "url": "resizeWindow.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "hideToolbar": false
        }
      }
    },
    {
      "url": "resizeWindow_noToolbar.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "hideToolbar": true
        }
      }
    },
    {
      "url": "darkenBg.css",
      "matches": ["projects"],
      "if": {
        "settings": { "darkenBg": true }
      }
    },
    {
      "url": "hideToolbar.css",
      "matches": ["projects"],
      "if": {
        "settings": { "hideToolbar": true }
      }
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "tags": ["editor", "theme", "projectPlayer"],
  "enabledByDefault": false
}
