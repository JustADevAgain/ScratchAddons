{
  "name": "Enhanced fullscreen",
  "description": "Adds several fixes and customization options to the project player's fullscreen mode.",
  "credits": [
    {
      "name": "lisa_wolfgang",
      "link": "https://github.com/lisa-wolfgang"
    }
  ],
  "info": [
    {
      "type": "notice",
      "text": "If you hide the toolbar, you'll need to use your browser's back feature to exit fullscreen mode.",
      "id": "hideToolbarNotice"
    }
  ],
  "settings": [
    {
      "name": "Automatically resize to window",
      "id": "resizeWindow",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Remove unused scrollbar",
      "id": "hideOverflow",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Automatically toggle browser fullscreen",
      "id": "browserFullscreen",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Darken background",
      "id": "darkenBg",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Remove rounded corners",
      "id": "removeCorners",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Remove border",
      "id": "removeBorder",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Hide toolbar",
      "id": "hideToolbar",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "userstyles": [
    {
      "url": "resizeWindow.css",
      "matches": ["projects"],
      "if": {
        "settings": { "resizeWindow": true }
      }
    },
    {
      "url": "hideOverflow.css",
      "matches": ["projects"],
      "if": {
        "settings": { "hideOverflow": true }
      }
    },
    {
      "url": "darkenBg.css",
      "matches": ["projects"],
      "if": {
        "settings": { "darkenBg": true }
      }
    },
    {
      "url": "removeCorners.css",
      "matches": ["projects"],
      "if": {
        "settings": { "removeCorners": true }
      }
    },
    {
      "url": "removeBorder.css",
      "matches": ["projects"],
      "if": {
        "settings": { "removeBorder": true }
      }
    },
    {
      "url": "hideToolbar.css",
      "matches": ["projects"],
      "if": {
        "settings": { "hideToolbar": true }
      }
    }
  ],
  "userscripts": [
    {
      "url": "browserFullscreen.js",
      "matches": ["projects"]
    }
  ],
  "tags": ["editor", "projectPlayer"],
  "enabledByDefault": false
}
