{
  "name": "Forumoji emojis when posting in the forums",
  "description": "Replaces Unicode emojis with Forumoji emojis before posting a post in the forums",
  "tags": ["community", "forums"],
  "versionAdded": "1.32.0",
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["editingScreens"]
    }
  ],
  "settings": [
    {
      "name": "Action if Emojis are not in Forumoji",
      "id": "not-in-forumoji",
      "type": "select",
      "default": "ask",
      "potentialValues": [
        {
          "id": "ask",
          "name": "Ask"
        },
        {
          "id": "remove",
          "name": "Remove"
        }
      ]
    }
  ],
  "credits": [
    {
      "name": "mybearworld",
      "link": "https://scratch.mit.edu/users/mybearworld/"
    }
  ],
  "dynamicDisable": true,
  "dynamicEnable": true
}
