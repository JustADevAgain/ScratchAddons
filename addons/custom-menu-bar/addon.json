{
  "name": "Custom menu bar",
  "description": "Allows you to customize the menu bar in the editor.",
  "credits": [
    {
      "name": "philipp2007 (Update, menus, compact profile dropdown)",
      "link": "https://ggigabyte.repl.co/"
    },
    {
      "name": "CST1229 (Compact user dropdown)",
      "link": "https://github.com/CST1229/"
    },
    {
      "name": "TheColaber (Editor messages)"
    },
    {
      "name": "lisa_wolfgang (Tutorials button)",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang/"
    }
  ],
  "tags": ["editor", "editorMenuBar"],
  "dynamicDisable": true,
  "dynamicEnable": true,
  "enabledByDefault": false,
  "versionAdded": "1.33.2",
  "userscripts": [
    {
      "url": "messages.js",
      "matches": ["projects"],
      "if": {
        "settings": {
          "messages": true
        }
      }
    },
    {
      "url": "username.js",
      "matches": ["projects"],
      "if": {
        "settings": {
          "compact-username": true
        }
      }
    }
  ],
  "userstyles": [
    {
      "url": "messages.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "messages": true
        }
      }
    },
    {
      "url": "username.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "compact-username": true
        }
      }
    },
    {
      "url": "menu-icons.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "menu-labels": "icons"
        }
      }
    },
    {
      "url": "tutorials-icon.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "tutorials-button": "icon"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Show messages button",
      "id": "messages",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Compact user dropdown",
      "id": "compact-username",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show menus",
      "id": "menu-labels",
      "type": "select",
      "potentialValues": [
        {
          "name": "Icons and text",
          "id": "both"
        },
        {
          "name": "Icons only",
          "id": "icons"
        }
      ],
      "default": "both"
    },
    {
      "name": "Tutorials button",
      "id": "tutorials-button",
      "type": "select",
      "potentialValues": [
        {
          "name": "Show icon and text",
          "id": "both"
        },
        {
          "name": "Show icon only",
          "id": "icon"
        }
      ],
      "default": "icon"
    }
  ]
}
