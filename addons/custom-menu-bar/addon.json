{
  "name": "Custom menu bar",
  "description": "Allows you to add or remove items from the menu bar in the editor.",
  "credits": [
    {
      "name": "philipp2007",
      "link": "https://ggigabyte.repl.co/",
      "note": "update, menus, compact user dropdown",
      "id": "update"
    },
    {
      "name": "CST1229",
      "link": "https://github.com/CST1229/",
      "note": "compact user dropdown",
      "id": "dropdown"
    },
    {
      "name": "TheColaber",
      "note": "editor messages",
      "id": "editor-messages"
    },
    {
      "name": "lisa_wolfgang",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang/",
      "note": "hide tutorials button",
      "id": "tutorials-button"
    }
  ],
  "tags": ["editor", "editorMenuBar", "featured"],
  "dynamicDisable": false,
  "dynamicEnable": false,
  "enabledByDefault": false,
  "versionAdded": "1.33.2",
  "userscripts": [
    {
      "url": "messages.js",
      "matches": ["projects"],
      "if": {
        "settings": {
          "messages": true
        }
      }
    },
    {
      "url": "username.js",
      "matches": ["projects"],
      "if": {
        "settings": {
          "compact-username": true
        }
      }
    }
  ],
  "userstyles": [
    {
      "url": "messages.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "messages": true
        }
      }
    },
    {
      "url": "username.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "compact-username": true
        }
      }
    },
    {
      "url": "menu-icons.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "menu-labels": "icons"
        }
      }
    },
    {
      "url": "tutorials-icon.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "tutorials-button": "icon"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Show messages button",
      "id": "messages",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Compact user dropdown",
      "id": "compact-username",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show menus",
      "id": "menu-labels",
      "type": "select",
      "potentialValues": [
        {
          "name": "Icons and text",
          "id": "both"
        },
        {
          "name": "Icons only",
          "id": "icons"
        }
      ],
      "default": "both"
    },
    {
      "name": "Tutorials button",
      "id": "tutorials-button",
      "type": "select",
      "potentialValues": [
        {
          "name": "Show icon and text",
          "id": "both"
        },
        {
          "name": "Show icon only",
          "id": "icon"
        }
      ],
      "default": "icon"
    }
  ]
}
