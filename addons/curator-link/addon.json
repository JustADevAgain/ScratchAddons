{
  "name": "Clickable usernames",
  "description": "Makes forum mentions and the front page curator's username clickable links to their profile.",
  "credits": [
    {
      "name": "Hans5958",
      "link": "https://github.com/Hans5958/userscripts/blob/master/Scratch/Curator%20Links.user.js"
    },
    {
      "name": "Samq64",
      "link": "https://github.com/Samq64"
    }
  ],
  "info": [
    {
      "type": "notice",
      "text": "Forum mentions styled with BBCode won't be clickable.",
      "id": "BBCode"
    }
  ],
  "userscripts": [
    {
      "url": "script.js",
      "matches": ["https://scratch.mit.edu/", "topics"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["https://scratch.mit.edu/"],
      "if": {
        "settings": { "styleAsNormalText": true }
      }
    }
  ],
  "settings": [
    {
      "id": "mentions",
      "name": "Make forum mentions clickable",
      "type": "boolean",
      "default": true
    },
    {
      "id": "curator",
      "name": "Make curator username clickable",
      "type": "boolean",
      "default": true
    },
    {
      "id": "styleAsNormalText",
      "name": "Style curator as normal text",
      "type": "boolean",
      "default": false,
      "if": {
        "settings": { "curator": true }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.4.0",
  "latestUpdate": {
    "version": "1.31.0",
    "newSettings": ["mentions"]
  },
  "tags": ["community", "forums"],
  "enabledByDefault": false
}
