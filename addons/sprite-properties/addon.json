{
  "name": "Collapsing sprite properties",
  "description": "Hides the sprite properties panel by default, like in Scratch 2.0. Double-click a sprite to show the properties panel again. To hide it again, double-click a sprite or use the collapse button in the properties panel.",
  "tags": ["editor"],
  "credits": [
    {
      "name": "lisa_wolfgang",
      "link": "https://github.com/lisa-wolfgang/"
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["projects"]
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "customCssVariables": [
    {
      "name": "transitionDuration",
      "value": {
        "type": "map",
        "source": {
          "type": "settingValue",
          "settingId": "transitionDuration"
        },
        "options": {
          "none": "0s",
          "short": "0.15s",
          "default": "0.25s",
          "long": "0.5s"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Collapse panel on load",
      "id": "hideByDefault",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Automatically collapse when mouse leaves sprite panel",
      "id": "autoCollapse",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Animation duration",
      "id": "transitionDuration",
      "type": "select",
      "potentialValues": [
        {
          "id": "none",
          "name": "None"
        },
        {
          "id": "short",
          "name": "Short"
        },
        {
          "id": "default",
          "name": "Default"
        },
        {
          "id": "long",
          "name": "Long"
        }
      ],
      "default": "default"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.29.0",
  "enabledByDefault": false
}
