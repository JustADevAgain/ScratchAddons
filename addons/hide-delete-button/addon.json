{
  "name": "Delete button action",
  "description": "Hides delete button (trash can icon) from sprites, costumes and sounds or ask for confirmation on delete.",
  "tags": ["editor", "featured"],
  "versionAdded": "1.19.0",
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "settings": [
    {
      "name": "Action... ",
      "id": "action",
      "type": "select",
      "potentialValues": [
        {
          "id": "confirm",
          "name": "Ask for confirmation"
        },
        {
          "id": "hide",
          "name": "Hide delete button"
        }
      ],
      "default": "confirm"
    }, 
    {
      "name": "Sprites",
      "id": "sprites",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Costumes and backdrops",
      "id": "costumes",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Sounds",
      "id": "sounds",
      "type": "boolean",
      "default": true
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"],
      "if": {
        "settings": {
          "action": "confirm"
        }
      }
    }
  ],
  "userstyles": [
    {
      "url": "sprites.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "sprites": true,
          "action": "hide"
        }
      }
    },
    {
      "url": "costumes.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "costumes": true,
          "action": "hide"
        }
      }
    },
    {
      "url": "sounds.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "sounds": true,
          "action": "hide"
        }
      }
    }
  ]
}
