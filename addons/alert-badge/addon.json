{
  "name": "Customizable message badge",
  "description": "Allows you to customize the colors of the message badge. Also changes its color and adds an '!' if you have alert messages from the Scratch Team.",
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects", "scratchWWWNoProject"]
    },
    {
      "url": "scratchr2.js",
      "matches": ["profiles", "forums", "https://scratch.mit.edu/404", "https://scratch.mit.edu/info/*", "https://scratch.mit.edu/statistics/", "https://scratch.mit.edu/mystuff/*", "https://scratch.mit.edu/accounts/*"]
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["projects", "scratchWWWNoProject"]
    },
    {
      "url": "scratchr2.css",
      "matches": ["profiles", "forums", "https://scratch.mit.edu/404", "https://scratch.mit.edu/info/*", "https://scratch.mit.edu/statistics/", "https://scratch.mit.edu/mystuff/*", "https://scratch.mit.edu/accounts/*"]
    },
    {
      "url": "messages.css",
      "matches": ["https://scratch.mit.edu/messages/*"]
    }
  ],
  "injectAsStyleElt": true,
  "settings": [
    {
      "name": "Badge color",
      "id": "default",
      "type": "color",
      "default": "#ffab1a"
    },
    {
      "name": "Highlight alerts",
      "id": "highlight",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Badge color when there are alerts",
      "id": "alert",
      "type": "color",
      "default": "#cc4400",
      "if": {
        "settings": {"highlight": true}
      }
    },
    {
      "name": "Badge color on messages page",
      "id": "messages",
      "type": "color",
      "default": "#cc4400"
    }
  ],
  "customCssVariables": [
    {
      "name": "default",
      "value": {"type": "settingValue", "settingId": "default"}
    },
    {
      "name": "alert",
      "value": {"type": "settingValue", "settingId": "alert"}
    },
    {
      "name": "messages",
      "value": {"type": "settingValue", "settingId": "messages"}
    }
  ],
  "tags": ["community"],
  "versionAdded": "1.34.0",
  "enabledByDefault": false,
  "credits": [
    {
      "name": "Secret-chest",
      "id": "addon",
      "link": "https://github.com/Secret-chest"
    }
  ]
}

