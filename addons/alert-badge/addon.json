{
  "name": "Customizable message badge",
  "description": "Allows you to customize the colors of the message badge. Also changes its color and adds an '!' if you have alert messages from the Scratch Team.",
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects", "scratchWWWNoProject", "isNotScratchWWW"]
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["projects", "scratchWWWNoProject"]
    },
    {
      "url": "scratchr2.css",
      "matches": ["isNotScratchWWW"]
    },
    {
      "url": "editor.css",
      "matches": ["projects"]
    }
  ],
  "injectAsStyleElt": true,
  "settings": [
    {
      "name": "Badge color when there are alerts",
      "id": "alert",
      "type": "color",
      "default": "#cc4400",
      "if": {
        "settings": { "highlight": true }
      }
    }
  ],
  "customCssVariables": [
    {
      "name": "alert",
      "value": { "type": "settingValue", "settingId": "alert" }
    },
    {
      "name": "alertfg",
      "value": {
        "type": "textColor",
        "source": { "type": "settingValue", "settingId": "alert" },
        "black": "#000000",
        "white": "#ffffff",
        "threshold": 180
      }
    }
  ],
  "tags": ["community"],
  "versionAdded": "1.37.0",
  "enabledByDefault": false,
  "credits": [
    {
      "name": "Secret-chest",
      "id": "addon",
      "link": "https://github.com/Secret-chest"
    }
  ]
}
