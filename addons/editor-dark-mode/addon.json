{
  "name": "Editor dark mode and customized colors",
  "description": "Customize colors used by the project editor. Multiple dark themes by different authors available. Use the reset button in the top right to reset to Scratch's default colors.",
  "info": [
    {
      "type": "notice",
      "id": "refresh",
      "text": "If any colors are incorrect or if text is hard to read, reload the page."
    }
  ],
  "credits": [
    {
      "name": "infinitytec (3.Dark, 3.Darker)",
      "link": "https://github.com/infinitytec"
    },
    {
      "name": "_nix (Dark editor)",
      "link": "https://github.com/towerofnix"
    },
    {
      "name": "Maximouse (\"Experimental\" Dark)",
      "link": "https://github.com/mxmou/customize-scratch"
    }
  ],
  "userscripts": [
    {
      "url": "text_color.js",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "experimental_editor.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ]
    },
    {
      "url": "text-shadow.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "textShadow",
        "value": true
      }
    },
    {
      "url": "hide_dots.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "dots",
        "value": false
      }
    },
    {
      "url": "dark_comments.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "darkComments",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "name": "Page background",
      "id": "page",
      "type": "color",
      "default": "#e5f0ff"
    },
    {
      "name": "Primary color",
      "id": "primary",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "name": "Secondary color",
      "id": "secondary",
      "type": "color",
      "default": "#3373cc"
    },
    {
      "name": "Menu bar background",
      "id": "menuBar",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "name": "Active tab background",
      "id": "activeTab",
      "type": "color",
      "default": "#ffffff"
    },
    {
      "name": "Inactive tab background",
      "id": "tab",
      "type": "color",
      "default": "#d9e3f2"
    },
    {
      "name": "Sprite list background",
      "id": "selector",
      "type": "color",
      "default": "#e9f1fc"
    },
    {
      "name": "Asset list background",
      "id": "selector2",
      "type": "color",
      "default": "#d9e3f2"
    },
    {
      "name": "Selected list item background",
      "id": "selectorSelection",
      "type": "color",
      "default": "#ffffff"
    },
    {
      "name": "Accent background",
      "id": "accent",
      "type": "color",
      "default": "#ffffff"
    },
    {
      "name": "Input background",
      "id": "input",
      "type": "color",
      "default": "#ffffff"
    },
    {
      "name": "Workspace background",
      "id": "workspace",
      "type": "color",
      "default": "#f9f9f9"
    },
    {
      "name": "Workspace scrollbar color",
      "id": "workspaceScrollbar",
      "type": "color",
      "default": "#cecdce"
    },
    {
      "name": "Block category menu background",
      "id": "categoryMenu",
      "type": "color",
      "default": "#ffffff"
    },
    {
      "name": "Selected category background",
      "id": "categoryMenuSelection",
      "type": "color",
      "default": "#e9eef2"
    },
    {
      "name": "Block palette background",
      "id": "palette",
      "type": "color",
      "default": "#f9f9f9"
    },
    {
      "name": "Full screen background",
      "id": "fullscreen",
      "type": "color",
      "default": "#ffffff"
    },
    {
      "name": "Full screen header background",
      "id": "stageHeader",
      "type": "color",
      "default": "#e8edf1"
    },
    {
      "name": "Border color",
      "id": "border",
      "type": "select",
      "default": "transparentBlack",
      "potentialValues": [
        {
          "id": "transparentBlack",
          "name": "Transparent black"
        },
        {
          "id": "transparentWhite",
          "name": "Transparent white"
        },
        {
          "id": "gray",
          "name": "Gray"
        },
        {
          "id": "black",
          "name": "Black"
        }
      ]
    },
    {
      "name": "Show workspace dots",
      "id": "dots",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Text shadow on blocks",
      "id": "textShadow",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Dark comments",
      "id": "darkComments",
      "type": "boolean",
      "default": false
    }
  ],
  "presets": [
