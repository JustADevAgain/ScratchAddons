{
  "name": "Semicolon glitch",
  "description": "Adds the semicolon glitch back to Scratch.",
  "credits": [
    {
      "name": "GrahamSH"
    }
  ],

  "userstyles": [
    {
      "url": "semicolon.css",
      "matches": ["https://scratch.mit.edu/*"],
      "settingMatch": {
        "id": "inverted",
        "value": false
      }
    },
    {
      "url": "inverted.css",
      "matches": ["https://scratch.mit.edu/*"]
      "settingMatch": {
        "id": "inverted",
        "value": true
      }
    }
  ],
  "userscripts": [
    {
      "url": "semicolon.js",
      "matches": ["https://scratch.mit.edu/*"]
    }
  ],
  "tags": ["easterEgg"],
  "enabledByDefault": false,
  "settings": [
    {
      "name": "Invert the colors of the semicolon (black background and white semicolon). Useful with the Website dark mode addon",
      "id": "inverted",
      "type": "boolean",
      "default": false
    }
  ]
}
