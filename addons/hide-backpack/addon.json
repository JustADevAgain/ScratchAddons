{
  "name": "Hide backpack",
  "description": "Removes the backpack from the bottom of the editor or adds a small button to open it.",
  "info": [
    {
      "type": "warning",
      "text": "If you disable \"show button\" setting, you have no access to backpack!",
      "id": "disable"
    }
  ],
  "credits": [
    {
      "name": "Norbiros",
      "link": "https://scratch.mit.edu/users/norbir/"
    }
  ],
  "settings": [
    {
      "name": "Show small backpack icon",
      "id": "showButton",
      "type": "boolean",
      "default": true
    }
  ],
  "userstyles": [
    {
      "url": "border.css",
      "matches": ["projects"]
    },
    {
      "url": "button.css",
      "matches": ["projects"],
      "if": {
        "settings": { "showButton": true }
      }
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "tags": ["editor", "codeEditor"],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "versionAdded": "1.29.0",
  "enabledByDefault": false
}
