{
  "name": "Custom menu bar",
  "description": "Hide specific editor menu bar items.",
  "credits": [
    {
      "name": "philipp2007",
      "link": "https://ggigabyte.repl.co/",
      "note": "update, menus, compact user dropdown",
      "id": "update"
    },
    {
      "name": "CST1229",
      "link": "https://github.com/CST1229/",
      "note": "compact user dropdown",
      "id": "dropdown"
    },
    {
      "name": "lisa_wolfgang",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang/",
      "note": "hide tutorials button",
      "id": "tutorials-button"
    }
  ],
  "tags": ["editor", "editorMenuBar", "featured"],
  "settings": [
    {
      "name": "Menus",
      "id": "menu-labels",
      "type": "select",
      "potentialValues": [
        {
          "name": "Show icons and text",
          "id": "both"
        },
        {
          "name": "Only show icons",
          "id": "icons"
        }
      ],
      "default": "both"
    },
    {
      "name": "Tutorials button",
      "id": "tutorials-button",
      "type": "select",
      "potentialValues": [
        {
          "name": "Show icon and text",
          "id": "both"
        },
        {
          "name": "Only show icon",
          "id": "icon"
        },
        {
          "name": "Hide",
          "id": "hide"
        }
      ],
      "default": "both"
    },
    {
      "name": "Hide My Stuff button",
      "id": "my-stuff",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Compact user dropdown",
      "id": "compact-username",
      "type": "boolean",
      "default": false
    }
  ],
  "userscripts": [
    {
      "url": "username.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "my-stuff-hide.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "my-stuff": true
        }
      }
    },
    {
      "url": "username.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "compact-username": true
        }
      }
    },
    {
      "url": "menu-icons.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "menu-labels": "icons"
        }
      }
    },
    {
      "url": "tutorials-icon.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "tutorials-button": "icon"
        }
      }
    },
    {
      "url": "tutorials-hide.css",
      "matches": ["projects"],
      "if": {
        "settings": {
          "tutorials-button": "hide"
        }
      }
    }
  ],
  "dynamicDisable": true,
  "dynamicEnable": true,
  "updateUserstylesOnSettingsChange": true,
  "enabledByDefault": false,
  "versionAdded": "1.22.0",
  "latestUpdate": {
    "version": "1.34.0",
    "isMajor": true,
    "temporaryNotice": "You can now customize the user dropdown and the menus.",
    "newSettings": ["menu-labels", "my-stuff", "compact-username"]
  }
}
