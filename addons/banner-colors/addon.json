{
  "name": "Customizable banner colors",
  "description": "Lets you change the colors of the discuss, explore, and My Stuff banners",
  "tags": ["community", "forums"],
  "enabledByDefault": false,
  "versionAdded": "1.25.0",
  "injectAsStyleElt": true,
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "settings": [
    {
      "name": "Forum banner color",
      "id": "forumcolor",
      "type": "color",
      "default": "#0fbd8c"
    },
    {
      "name": "Explore banner color",
      "id": "explorecolor",
      "type": "color",
      "default": "#ffbf00"
    },
    {
      "name": "My Stuff banner color",
      "id": "mystuffcolor",
      "type": "color",
      "default": "#4d97ff"
    }
  ],
  "userstyles": [
    {
      "url": "forums.css",
      "matches": ["forums"],
      "if": {
        "addonEnabled": ["scratchr2"]
      }
    },
    {
      "url": "explore.css",
      "matches": ["https://scratch.mit.edu/explore/*"]
    },
    {
      "url": "mystuff.css",
      "matches": ["https://scratch.mit.edu/mystuff/*"],
      "if": {
        "addonEnabled": ["scratchr2"]
      }
    }
  ],
  "customCssVariables": [
    {
      "name": "forumcolor",
      "value": {
        "type": "settingValue",
        "settingId": "forumcolor"
      }
    },
    {
      "name": "explorecolor",
      "value": {
        "type": "settingValue",
        "settingId": "explorecolor"
      }
    },
    {
      "name": "mystuffcolor",
      "value": {
        "type": "settingValue",
        "settingId": "mystuffcolor"
      }
    }
  ],
  "credits": [
    {
      "name": "MystPi",
      "link": "https://github.com/mystpi"
    }
  ]
}
